<h1>Scrabble-Web</h1>

<%= link_to "Play New Word", new_play_path %>

<div id="previous_words">
  <h3>Previous Words</h3>
    <ul id="plays">
      <% @plays.each do |play| %>
        <li>
          <%= "#{play.word.downcase}, #{play.score()}" %>
          <%= link_to "Delete", play_path(play.id), method: 'DELETE' %>
        </li>
      <% end %>
    </ul>
</div>
